<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llTitlebar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/pro_shenblue"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Better"
            android:textColor="@color/pro_white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvSlideMenu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/cirlcle_item"
            android:gravity="center"
            android:layout_marginLeft="-50dp"
            android:drawableRight="@drawable/slide_menu"
            android:textSize="24sp" />
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/_20dp"
            android:textSize="@dimen/_20sp"
            android:text="no pains, no gains"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvPinyinbiao"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/cirlcle_item"
            android:gravity="center"
            android:text="@string/pinyinbiao"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvHandWrite"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/cirlcle_item"
            android:gravity="center"
            android:text="@string/hand_write"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvStart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/cirlcle_item"
            android:gravity="center"
            android:text="@string/short_dialog"
            android:textSize="24sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/cirlcle_item"
            android:gravity="center"
            android:text="高级"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>