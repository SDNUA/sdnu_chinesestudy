<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="@color/pro_shenblue"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_alert"
            android:textColor="@color/pro_white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_weight="2"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvUpdateContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_class"
            android:textColor="@color/theme_font_color"
            android:padding="@dimen/_10dp"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginTop="@dimen/_10dp"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/login_btn"
            android:textColor="@color/theme_font_color"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/update_alert" />
    </LinearLayout>

</LinearLayout>